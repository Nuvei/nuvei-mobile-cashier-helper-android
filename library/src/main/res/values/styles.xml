<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
  <style name="Theme.Transparent" parent="Theme.AppCompat.NoActionBar">
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:backgroundDimEnabled">false</item>
  </style>

  <style name="ScannerTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>
    <item name="android:windowBackground">@color/default_window_background</item>
  </style>

  <style name="ScannerTheme.TransparentStatusBar" parent="ScannerTheme.Base" />

  <style name="ScannerTheme" parent="ScannerTheme.TransparentStatusBar" />

  <style name="EnterManuallyButton" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
    <item name="android:fontFamily" tools:ignore="NewApi">sans-serif</item>
    <item name="android:layout_alignParentBottom">true</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:background">@drawable/cancel_button</item>
    <item name="android:layout_margin">0dp</item>
    <item name="android:minHeight">56dp</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textSize" tools:ignore="SpUsage">16dp</item>
  </style>

  <style name="ScannerButtonTheme" parent="@style/ThemeOverlay.AppCompat.Light">
    <item name="colorAccent">@color/paycards_link_color</item>
  </style>

  <style name="ScannerButton">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">8dp</item>
    <item name="android:shadowColor">@android:color/black</item>
    <item name="android:shadowDx">1</item>
    <item name="android:shadowDy">1</item>
    <item name="android:shadowRadius">2</item>
    <item name="android:textColor">@color/paycards_link_color</item>
    <item name="android:textIsSelectable">false</item>
    <item name="android:textSize" tools:ignore="SpUsage">12dp</item>
    <item name="android:theme">@style/ScannerButtonTheme</item>
    <item name="android:textColorHighlight">#22ffffff</item>
  </style>

  <style name="FlashButton" parent="Widget.AppCompat.Button.Borderless">
    <item name="android:minWidth">32dp</item>
    <item name="android:minHeight">32dp</item>
    <item name="android:fitsSystemWindows">true</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_marginRight">16dp</item>
    <item name="android:layout_marginTop">16dp</item>
    <item name="android:padding">8dp</item>
    <item name="android:paddingBottom">17dp</item>
    <item name="android:scaleType">fitEnd</item>
    <item name="android:background">@null</item>
    <item name="android:visibility">gone</item>
  </style>
</resources>
